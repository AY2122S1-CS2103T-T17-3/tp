<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<VBox id="clientCardPane" xmlns="http://javafx.com/javafx/11" xmlns:fx="http://javafx.com/fxml/1">
    <HBox alignment="CENTER_LEFT" prefWidth="184.0" spacing="5">
        <Label styleClass="card_big_label" text="Name:"/>
        <Label fx:id="clientName" styleClass="card_big_label">
            <tooltip>
                <Tooltip text="Name"/>
            </tooltip>
        </Label>
    </HBox>
    <HBox alignment="CENTER_LEFT" prefWidth="184.0" spacing="5">
        <Label styleClass="card_big_label" text="Client ID:"/>
        <Label fx:id="clientId" styleClass="card_small_label">
            <tooltip>
                <Tooltip text="Client ID"/>
            </tooltip>
        </Label>
    </HBox>
    <HBox alignment="CENTER_LEFT" prefWidth="184.0" spacing="5">
        <Label styleClass="card_big_label" text="Contact Number:"/>
        <Label fx:id="clientPhoneNumber" styleClass="card_small_label">
            <tooltip>
                <Tooltip text="Contact Number"/>
            </tooltip>
        </Label>
    </HBox>
    <HBox alignment="CENTER_LEFT" prefWidth="184.0" spacing="5">
        <Label styleClass="card_big_label" text="Address:"/>
        <Label fx:id="clientAddress" styleClass="card_small_label">
            <tooltip>
                <Tooltip text="Address"/>
            </tooltip>
        </Label>
    </HBox>
    <HBox alignment="CENTER_LEFT" prefWidth="184.0" spacing="5">
        <Label styleClass="card_big_label" text="Email Address:"/>
        <Label fx:id="clientEmail" styleClass="card_small_label">
            <tooltip>
                <Tooltip text="Email Address"/>
            </tooltip>
        </Label>
    </HBox>
    <HBox alignment="CENTER_LEFT" prefWidth="184.0" spacing="5">
        <Label styleClass="card_big_label" text="Created At:"/>
        <Label fx:id="clientCreatedAt" styleClass="card_small_label">
            <tooltip>
                <Tooltip text="Created At"/>
            </tooltip>
        </Label>
    </HBox>
    <HBox alignment="CENTER_LEFT" prefWidth="184.0" spacing="5">
        <Label styleClass="card_big_label" text="Risk Appetite:"/>
        <Label fx:id="clientRiskAppetite" styleClass="card_small_label">
            <tooltip>
                <Tooltip text="Risk Appetite"/>
            </tooltip>
        </Label>
    </HBox>
    <HBox alignment="CENTER_LEFT" prefWidth="184.0" spacing="5">
        <Label styleClass="card_big_label" text="Disposable Income:"/>
        <Label fx:id="clientDisposableIncome" styleClass="card_small_label">
            <tooltip>
                <Tooltip text="Disposable Income"/>
            </tooltip>
        </Label>
    </HBox>
    <HBox alignment="CENTER_LEFT" prefWidth="184.0" spacing="5">
        <Label styleClass="card_big_label" text="Current Financial Plans:" textOverrun="CLIP" wrapText="true"/>
        <Label fx:id="clientCurrentPlans" styleClass="card_small_label">
            <tooltip>
                <Tooltip text="Current Financial Plans"/>
            </tooltip>
        </Label>
    </HBox>
    <HBox alignment="CENTER_LEFT" prefWidth="184.0" spacing="5">
        <Label styleClass="card_big_label" text="Last Met:"/>
        <Label fx:id="clientLastMet" styleClass="card_small_label">
            <tooltip>
                <Tooltip text="Last Met"/>
            </tooltip>
        </Label>
    </HBox>
    <HBox alignment="CENTER_LEFT" prefWidth="184.0" spacing="5">
        <Label styleClass="card_big_label" text="Next Meeting:"/>
        <Label fx:id="clientNextMeeting" styleClass="card_small_label">
            <tooltip>
                <Tooltip text="Next Meeting"/>
            </tooltip>
        </Label>
    </HBox>
    <padding>
        <Insets bottom="10.0" left="15.0" right="10.0" top="10.0"/>
    </padding>
</VBox>
